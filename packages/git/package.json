{
  "name": "@commit-generator/git",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup --format cjs,esm",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
