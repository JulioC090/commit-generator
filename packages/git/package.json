    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p ."
  },
  "devDependencies": {
    "@commit-generator/typescript-config": "workspace:^",
    "@types/node": "^22.10.2"
  }
}