{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "baseUrl": "src",
    "rootDirs": ["src", "tests"],
    "outDir": "dist",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "tests"],
  "exclude": []
}